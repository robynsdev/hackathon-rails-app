<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>
 
<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<h2>Comments</h2>
<%= render @post.comments %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>

<%= link_to 'Edit', edit_post_path(@post) %>

<%# deletes post %>
<% if user_signed_in? %>
  <%= link_to 'Destroy', post_path(@post),
                method: :delete,
                data: { confirm: 'Are you sure?' } %>
  <% end %>

<%= link_to 'Back', posts_path %>