<h1>Post listing</h1>

<% if user_signed_in? %>
  <%= link_to 'Create a new post', new_post_path %>
<% end %>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th></th>
  </tr>
 
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.content %></td>
      <td><%= link_to 'Show', post_path(post) %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'Back', blog_index_path %>